<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header.ejs') %>

<body>
    <div class="container">

        <!---------Comienza el nav--------------------->
        <%- include('../partials/navBar.ejs') %>
        <!---------Comienza el main------------------------>


        <main class="row">
            <h2 class="col-sm-12 col-md-12 col-lg-12 main-titulo">Productos</h2>


            <% for (let i= 0; i<productos.length; i++){ %>
            <%if(productos[i].recomendado== "recomendado"){%>
            <article class="col-sm-12 col-md-6 col-lg-3">
                <img width="50%" src="/images/productos/<%= productos[i].imagen%>" alt="">
                    <h4><%= productos[i].nombre %></h4>
                    <p>$<%= productos[i].precio %></p>
                    <ul>
                        <button type="button" class="btn btn-primary"><a href="/detalleProducto/<%= productos[i].id %> ">Detalles</a></button>
                        <button type="button" class="btn btn-primary"><a href="/carrito"><i
                                    class="fas fa-cart-plus"></i>
                                Comprar
                            </a></button>
                    </ul>
            </article>
            <% } %>
            <%} %>

            <h2 class="col-sm-12 col-lg-12 main-titulo">Mas vendidos</h2>
            <% for (let i= 0; i<productos.length; i++){ %>
            <%if(productos[i].recomendado== "vendido"){%>
            <article class="col-sm-12 col-md-6 col-lg-3">
                <img width="50%" src="/images/productos/<%= productos[i].imagen%>" alt="">
                <h4><%= productos[i].nombre %></h4>
                <p>$<%= productos[i].precio %></p>
                <ul>
                    <button type="button" class="btn btn-primary"><a href="/detalleProducto/<%= productos[i].id %> ">Detalles</a></button>
                    <button type="button" class="btn btn-primary"><a href="/carrito"><i class="fas fa-cart-plus"></i>
                            Comprar
                        </a></button>
                </ul>
            </article>
            <% } %>
            <%} %>
        </main>

        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer.ejs') %>
        <!--LIBRERIAS-->
        <script src="/bootstrap/js/jquery-3.5.1.js"></script>
        <script src="/bootstrap/js/popper.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js">
        </script>
</body>

</html>