<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center main-titulo">Borrar el Producto</h1>
                </div>
            </article>
        </section>

        <section class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-6 mx-auto bg-light ">
                        <div class="signup-form">
                            <form id="form-delete" action="/admin/delete/ <%=productoDelete.id%> ?_method=DELETE" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="">Categoria Del Producto</label>
                                    <input type="text" class="form-control" name="categoria"
                                        placeholder="Categoria del producto" 
                                        value="<%= productoDelete.category%>"disabled>
                                        
                                </div>
                                <div class="form-group">
                                    <label for="">Nombre Del Producto</label>
                                    <input type="text" class="form-control" name="nombre"
                                        placeholder="Nombre del producto" 
                                        value="<%= productoDelete.name%>" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="">Descripción Del Producto</label>
                                    <input type="text" class="form-control" name="descripcion"
                                        placeholder="Descripción del producto" 
                                        value="<%= productoDelete.description%>" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="">Stock Del Producto</label>
                                    <input type="number" class="form-control" name="stock"
                                        placeholder="Stock del producto" 
                                        value="<%= productoDelete.stock%>" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="">Precio Del Producto</label>
                                    <input type="number" class="form-control" name="precio"
                                        placeholder="Indique el precio" 
                                        value="<%= productoDelete.price%>"disabled>
                                </div>
                        </div>
                    </div>
                    <div class="col-6 mx-auto bg-light ">
                        <div class="signup-form">
                            <div class="custom-file">
                                <figure class="form-group">
                                    <img class="w-50 " src="/images/productos/<%= productoDelete.image%>" alt="producto">
                                </figure>
                                <button id="delete" type="submit" class="btn btn btn-danger">Borrar El producto</button>
                                <a class="btn btn-primary" href="/administrar">Volver</a>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
        <!--LIBRERIAS-->
        <script src="/bootstrap/js/jquery-3.5.1.js"></script>
        <script src="/bootstrap/js/popper.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
        <script src="/js/validationFrontProduct.js"></script>
</body>