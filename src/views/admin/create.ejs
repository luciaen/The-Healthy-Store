<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>


        <section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center main-titulo">Agregar producto</h1>
                </div>
            </article>
        </section>

        <section class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-6 mx-auto bg-light ">
                        <div>
                            <ul class="errores">

                            </ul>
                        </div>
                        <div class="signup-form">
                            <form class="form-product-create" action="/admin/create" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                <select name="categoria" class="custom-select" id="">
                                <option selected disabled value="">Elegir Categoria</option>
                                    <option value="1">Leches</option>
                                    <option value="2">Aceites</option>
                                    <option value="3">Endulzantes</option>
                                    <option value="4">Harinas</option>
                                    <option value="5">Pastas y Arroz</option>
                                    <option value="6">Frutos Secos</option>
                                    <option value="7">Granolas</option>
                                    <option value="8">Viandas</option>
                                    <option value="9">Bebidas</option>
                                    <option value="10">Postres y Snacks</option>
                                </select>
                                <% if(typeof errors != 'undefined' && errors.categoria){%>
                                    <span class="text-danger" > <%= errors.categoria.msg %></span>
                                  <%}%>
                            </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="nombre"
                                        placeholder="Nombre del producto" >
                                        <% if(typeof errors != 'undefined' && errors.nombre){%>
                                            <span class="text-danger" > <%= errors.nombre.msg %></span>
                                          <%}%>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="descripcion"
                                        placeholder="DescripciÃ³n del producto" >
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="stock"
                                        placeholder="Stock del producto" >
                                </div>
                        </div>
                    </div>
                    <div class="col-6 mx-auto bg-light ">
                        <div class="signup-form">
                            <div class="form-group">
                                <input type="number" class="form-control" name="precio" placeholder="Indique el precio"
                                    >
                            </div>
                            <div class="form-group">
                                <select name="descuento" class="custom-select">
                                    <option selected disabled value="">Elegir Descuento</option>
                                    <option value="0">Sin descuento</option>
                                    <option value="15">15%</option>
                                    <option value="30">30%</option>
                                </select>
                            </div>
                            <select name="recomendado" class="form-control" id="">
                                <option selected disabled value="">Elegir Recomendacion</option>
                                <option value="noRecomendado">No Recomendado</option>
                                <option value="recomendado">Productos Recomendados</option>
                                <option value="vendido">Mas Vendidos</option>
                            </select> <br>

                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="imagen">
                                <label class="custom-file-label" for="">Eligir la imagen...</label>
                            </div>
                            <div class="form-group"> <br>
                                <button type="submit" class="btn btn btn-primary">Guardar</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    
    <!-------------Comienza el footer---------------------->
    <%- include('../partials/footer') %>
    <!--LIBRERIAS-->
    <script src="/bootstrap/js/jquery-3.5.1.js"></script>
    <script src="/bootstrap/js/popper.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="/js/validationFrontProduct.js"></script>
</body>

</html>