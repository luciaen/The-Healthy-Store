<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>


        <section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center main-titulo">Crear el Producto</h1>
                </div>
            </article>
        </section>

        <section class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-6 mx-auto bg-light ">
                        <div class="signup-form">
                            <form action="/admin/create" method="POST" enctype="multipart/form-data">
                                <select name="categoria" class="form-control" id="">
                                    <option selected disabled value="#">Elegir Categoria</option>
                                    <option value="0">-</option>
                                    <option value="leche">Leches</option>
                                    <option value="aceites">Aceites</option>
                                    <option value="endulzantes">Endulzantes</option>
                                    <option value="harinas">Harinas</option>
                                    <option value="pastasyArroz">Pastas y Arroz</option>
                                    <option value="postresySnacks">Postres y Snacks</option>
                                    <option value="frutosSecos">Frutos Secos</option>
                                    <option value="granolas">Granolas</option>
                                    <option value="viandas">Viandas</option>>
                                    <option value="bebidas">Bebidas</option>>
                                </select> <br>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="nombre"
                                        placeholder="Nombre del producto" required="required">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="descripcion"
                                        placeholder="DescripciÃ³n del producto" required="required">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" name="stock"
                                        placeholder="Stock del producto" required="required">
                                </div>
                        </div>
                    </div>
                    <div class="col-6 mx-auto bg-light ">
                        <div class="signup-form">
                            <div class="form-group">
                                <input type="number" class="form-control" name="precio" placeholder="Indique el precio"
                                    required="required">
                            </div>
                            <div class="form-group">
                                <select name="descuento" class="custom-select" required>
                                    <option selected disabled value="#">Elegir Descuento</option>
                                    <option value="0">Sin descuento</option>
                                    <option value="15">15%</option>
                                    <option value="30">30%</option>
                                </select>
                            </div>
                            <select name="recomendado" class="form-control" id="">
                                <option selected disabled value="#">Elegir Recomendacion</option>
                                <option value="noRecomendado">No Recomendado</option>
                                <option value="recomendado">Productos Recomendados</option>
                                <option value="vendido">Mas Vendidos</option>
                            </select> <br>

                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="imagen" required>
                                <label class="custom-file-label" for="">Eligir la imagen...</label>
                            </div>
                            <div class="form-group"> <br>
                                <button type="submit" class="btn btn btn-primary">Guardar</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    
    <!-------------Comienza el footer---------------------->
    <%- include('../partials/footer') %>
    <!--LIBRERIAS-->
    <script src="bootstrap/js/jquery-3.5.1.js"></script>
    <script src="bootstrap/js/popper.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js">
    </script>
</body>

</html>