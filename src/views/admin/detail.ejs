<!doctype html>
<html lang="es">
  <%- include('../partials/header') %>
  <body>
    <div class="container-fluid">
      <%- include('../partials/navBar') %>  

        <!-- Cuerpo principal -->
        <section class="row">
          <article class="col-12  card pt-5" >
                  <div class="card-body">
                    <h1 class="card-title text-center">Detalle del producto</h1>
                  </div>
          </article>
      </section>

        <section class="bg-home pt-4">
            <div class="container">
                <div class="row" >
                    <div class="col-6 mx-auto bg-light ">
                        <div class="card">
                            <ul class="list-group">
                                <li class="list-group-item">ID: <%= productoCategoria.ID%></li>
                                <li class="list-group-item">Nombre: <%= productoCategoria.nombre%></li>
                                <li class="list-group-item">Descripci√≥n: <%= productoCategoria.descripcion%></li>
