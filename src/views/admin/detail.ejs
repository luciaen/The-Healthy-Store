                                <li class="list-group-item">Stock: <%= productoCategoria.stock%></li>
                                <li class="list-group-item">Precio: <%= productoCategoria.precio%></li>
                                <li class="list-group-item">Descuento: <%= productoCategoria.descuento%></li>
                            </ul>
                        </div>
                      </div>
                      <div class="col-6 mx-auto bg-light ">
                        <div class="card">
                            <figure class="form-group">
                              <img class="w-50 " src="/img/productos/<%=  productoCategoria.imagen%>" alt="Imagen del producto">
                          </figure>
                        </div> 
                        <a class="btn btn-danger" href="/administrar">Volver</a>
                    </div>                        
                </div>
            </div>
        </section>
        <!-- Footer -->
        <%- include('../partials/footer') %>        <!-- Scripts para Bootstrap -->
        <script src="bootstrap/js/jquery-3.5.1.js"></script>
