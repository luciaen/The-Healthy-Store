<!doctype html>
<html lang="es">
  <%- include('../partials/header') %>
  <body>
    <div class="container">
      <%- include('../partials/navBar') %>  

        <!-- Cuerpo principal -->
        <section class="row">
          <article class="col-12  card pt-5" >
                  <div class="card-body">
                    <h1 class="card-title text-center">Editar el Producto</h1>
                  </div>
          </article>
      </section>

        <section class="bg-home pt-4">
            <div class="container">
                <div class="row" >
                    <div class="col-6 mx-auto bg-light ">
                        <div class="signup-form">
                            <form action="/admin/edit/<%= productoCategoria.ID%>?_method=PUT" method="POST" >
                                <div class="form-group">
                                    <input type="text" class="form-control" name="nombre" placeholder="Nombre del producto" required="required" value="<%= productoCategoria.nombre%>">
                                </div>	
                                <div class="form-group">
                                    <input type="text" class="form-control" name="descripcion" placeholder="DescripciÃ³n del producto" required="required" value="<%= productoCategoria.descripcion%>">
                                </div>
                                <div class="form-group">
                                  <input type="text" class="form-control" name="categoria" placeholder="Categoria del producto" required="required" value="<%= productoCategoria.descripcion%>">
                              </div>
                              <div class="form-group">
                                <input type="number" class="form-control" name="stock" placeholder="Stock del producto" required="required" value="<%= productoCategoria.descripcion%>">
                            </div>
                                <div class="form-group">
                                    <input type="number" class="form-control" name="precio" placeholder="Indique el precio" required="required" value="<%= productoCategoria.precio%>">
                                </div>
                              </div>
                            </div>   
                                <div class="col-6 mx-auto bg-light ">
                                  <div class="signup-form">
                               
                                <div class="form-group">
                                    <select  name="descuento" class="custom-select" required>
                                      <option selected disabled value="#">Elija su descuento</option>
                                      <option value="<%= productoCategoria.descuento == 0 ? 0 :productoCategoria.descuento %>" selected>Sin descuento</option>
                                      <option value="<%= productoCategoria.descuento == 10 ? 10:productoCategoria.descuento %>" selected>  10%</option>
                                      <option value="<%= productoCategoria.descuento == 20 ? 20 :productoCategoria.descuento %>" selected>20%</option>
                                    </select>
                                </div>
                                <div class="custom-file">
                                    <figure class="form-group">
                                        <img class="w-50 " src="/img/productos/<%= productoCategoria.imagen%>" alt="producto de comida">
                                    </figure>
                                    <input type="file" class="custom-file-input"  name="imagen" placeholder="Seleccione una imagen" required>
                                    <label class="custom-file-label" for="">Eligir la imagen...</label>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn btn-info">Actualizar</button>
                                    <a class="btn btn-danger" href="/administrar">Volver</a>
                                </div>
                            </form>
                    </div>                        
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer -->
        <%- include('../partials/footer') %>        
        <script src="bootstrap/js/jquery-3.5.1.js"></script>
      <script src="bootstrap/js/popper.min.js"></script>
      <script src="bootstrap/js/bootstrap.min.js">
      </script>
</body>
</html>