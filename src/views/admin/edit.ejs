<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center main-titulo">Editar el Producto</h1>
                </div>
            </article>
        </section>

        <section class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-6 mx-auto bg-light ">
                        <div class="signup-form">
                            <form action="/admin/edit/ <%=productoEdit.id%> ?_method=PUT" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="">Categoria Del Producto</label>
                                    <select name="categoria" class="form-control" id="">
                                        <option value=<%= productoEdit.categoryId%>><%= productoEdit.categoryId%></option>
                                        <option value="0">-</option>
                                        <option value="leche">Leches</option>
                                        <option value="aceites">Aceites</option>
                                        <option value="endulzantes">Endulzantes</option>
                                        <option value="harinas">Harinas</option>
                                        <option value="pastasyArroz">Pastas y Arroz</option>
                                        <option value="postresySnacks">Postres y Snacks</option>
                                        <option value="frutosSecos">Frutos Secos</option>
                                        <option value="granolas">Granolas</option>
                                        <option value="viandas">Viandas</option>>
                                        <option value="bebidas">Bebidas</option>>
                                    </select>
                                        
                                </div>
                                <div class="form-group">
                                    <label for="">Nombre Del Producto</label>
                                    <input type="text" class="form-control" name="nombre"placeholder="Nombre del producto" required="required"value="<%= productoEdit.name%>">
                                </div>
                                <div class="form-group">
                                    <label for="">Descripción Del Producto</label>
                                    <input type="text" class="form-control" name="descripcion"
                                        placeholder="Descripción del producto" required="required"
                                        value="<%= productoEdit.description%>">
                                </div>
                                <div class="form-group">
                                    <label for="">Stock Del Producto</label>
                                    <input type="number" class="form-control" name="stock"
                                        placeholder="Stock del producto" required="required"
                                        value="<%= productoEdit.stock%>">
                                </div>
                                <div class="form-group">
                                    <label for="">Precio Del Producto</label>
                                    <input type="number" class="form-control" name="precio"
                                        placeholder="Indique el precio" required="required"
                                        value="<%= productoEdit.price%>">
                                </div>
                        </div>
                    </div>
                    <div class="col-6 mx-auto bg-light "><br>
                        <div class="signup-form">
                            <div class="form-group">
                                <select  name="descuento" class="custom-select"  required>
                                  <option disabled value="#">Seleccione un descuento"</option>
                                  <option value="0" <%= productoEdit.discount == 0 ? "selected" : null %>
                                    >Sin descuento</option>
                                  <option value="15" <%= productoEdit.discount == 15 ? "selected" : null %>>15%</option>
                                  <option value="30" <%= productoEdit.discount == 30 ? "selected" : null %>>30%</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select  name="recomendado" class="custom-select"  required>
                                  <option disabled value="#">Elegir Recomendacion"</option>
                                  <option value="noRecomendado" <%= productoEdit.recomended == "noRecomendado" ? "selected" : null %>
                                    >No Recomendado</option>
                                  <option value="recomendado" <%= productoEdit.recomended == "recomendado" ? "selected" : null %>>Productos Recomendados</option>
                                  <option value="vendido" <%= productoEdit.recomended == "vendido" ? "selected" : null %>>Mas Vendidos</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="">Imagen del producto</label>
                                <figure class="form-group">
                                    <img class="w-50 " src="/images/productos/<%=  productoEdit.image %>"
                                        alt="Imagen del del plato">
                                </figure>
                                <input type="hidden"  name="oldImagen"  value="<%= productoEdit.image%>">
                                <input type="file"   name="imagen"  placeholder="Eligir la imagen...">
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="imagen"
                                    placeholder="Seleccione una imagen">
                                <label class="custom-file-label" for="">Eligir nueva imagen...</label>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn btn-primary">Actualizar</button>
                                <a class="btn btn-danger" href="/administrar">Volver</a>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
        <!--LIBRERIAS-->
        <script src="/bootstrap/js/jquery-3.5.1.js"></script>
        <script src="/bootstrap/js/popper.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js">
        </script>
</body>

</html>