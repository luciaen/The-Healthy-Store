<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <br>
        <h3 class="contactovinculo main-titulo">Administrar Productos</h3>
        <br>

        <button type="button" class="btn btn-secondary justify-content-end botonlogin "><a class="agregar-prod" href="/admin/create">Agregar
            Producto <i class="fas fa-plus-circle"></i></a></button><br><br>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Categor√≠a</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Ver</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Borrar</th>
                </tr>
            </thead>
            <tbody>
                <% productos.forEach(producto => { %>
                <tr>
                    <th scope="row"><%=producto.id%></th>
                    <td><%=producto.nombre%></td>
                    <td><%=producto.categoria%></td>
                    <td><%=producto.stock%></td>
                    <td><%=producto.precio%></td>
                    <td><a href="/admin/detail/<%=producto.id%>"><i class="far fa-eye"></i></a></td>
                    <td><a href="/admin/edit/<%=producto.id%>"><i class="fas fa-pencil-alt"></i></a></td>
                    <td><a href="/admin/delete/<%=producto.id%>"><i class="fas fa-trash"></i></a></td>
                </tr>
            <%}) %>    
            </tbody>
        </table>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
        <!--LIBRERIAS-->
        <script src="bootstrap/js/jquery-3.5.1.js"></script>
        <script src="bootstrap/js/popper.min.js"></script>
        <script src="bootstrap/js/bootstrap.min.js">
        </script>
</body>

</html>