<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <h1 class='main-titulo'>Admin De productos</h1>
        <section class="row">
            <article class="col-12">
                <button type="button" class="btn btn-secondary justify-content-end botonlogin "><a class="agregar-prod"
                        href="admin/create">Agregar
                        Producto <i class="fas fa-plus-circle"></i></a></button><br><br>
            </article>
        </section>
        <div class="table-responsive">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Producto</th>
                        <th>Categor√≠a</th>
                        <th>Stock</th>
                        <th>Precio</th>
                        <th>Ver</th>
                        <th>Editar</th>
                        <th>Borrar</th>
                    </tr>
                </thead>
                <tbody>

                    
                    <% for (let i= 0; i<5; i++){ %>
                    <tr>
                        <th scope="row"><%=productos[i].id%></th>
                        <td><%=productos[i].name%></td>
                        <td><%=productos[i].categoryId%></td>
                        <td><%=productos[i].stock%></td>
                        <td><%=productos[i].price%></td>
                        <td><a href="/admin/detail/<%=productos[i].id%>"><i class="far fa-eye"></i></a></td>
                        <td><a href="/admin/edit/<%=productos[i].id%>"><i class="fas fa-pencil-alt"></i></a></td>
                        <td><a href="/admin/delete/<%=productos[i].id%>"><i class="fas fa-trash"></i></a></td>
                    </tr>
                    <%} %>


                </tbody>
            </table>
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="/administrar" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/administrar">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/administrar/page/2">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/administrar/page/3">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/administrar/page/2" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
        <!--LIBRERIAS-->
        <script src="bootstrap/js/jquery-3.5.1.js"></script>
        <script src="bootstrap/js/popper.min.js"></script>
        <script src="bootstrap/js/bootstrap.min.js">
        </script>
</body>

</html>