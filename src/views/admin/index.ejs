<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <h1 class='main-titulo'>Admin De productos</h1>
        <section class="row">
            <article class="col-12">
                <button type="button" class="btn btn-secondary justify-content-end botonlogin "><a class="agregar-prod"
                        href="/registro">Agregar
                        Producto <i class="fas fa-plus-circle"></i></a></button><br><br>
            </article>
        </section>
        <div class="table-responsive">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Producto</th>
                        <th>Categor√≠a</th>
                        <th>Stock</th>
                        <th>Precio</th>
                        <th>Ver</th>
                        <th>Editar</th>
                        <th>Borrar</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(producto => { %>
                    <tr>
                        <th scope="row"><%=producto.id%></th>
                        <td><%=producto.nombre%></td>
                        <td><%=producto.categoria%></td>
                        <td><%=producto.stock%></td>
                        <td><%=producto.precio%></td>
                        <td><a href="/admin/detail/<%=producto.id%>"><i class="far fa-eye"></i></a></td>
                        <td><a href="/admin/edit/<%=producto.id%>"><i class="fas fa-pencil-alt"></i></a></td>
                        <td><a href="/admin/delete/<%=producto.id%>"><i class="fas fa-trash"></i></a></td>
                    </tr>
                    <%}) %>


                </tbody>
            </table>
        </div>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
        <!--LIBRERIAS-->
        <script src="bootstrap/js/jquery-3.5.1.js"></script>
        <script src="bootstrap/js/popper.min.js"></script>
        <script src="bootstrap/js/bootstrap.min.js">
        </script>
</body>

</html>