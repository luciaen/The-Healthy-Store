<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <section class="row">
            <article class="col-12  ">
                <div class="card-body">
                    <h1 class="h3login main-titulo">Crear Cuenta</h1>

                </div>
            </article>
        </section>
        <section class="bg-home pt-6">
            <div class="container">
                <div class="row">
                    <div class="col-8 mx-auto ">
                        <div class="signup-form">
                               <!-- Aquí acomode los errores para que se vean mejor y Edu no se Angustie. Abrazos.--->
                               <% if(typeof(errors) != 'undefined'){%>
                                <ul class="alert alert-danger">
                                    <% errors.forEach(error => { %>
                                        <li><%= error.msg%></li>
                                    <%});%>
                                </ul>
                            <%}%>
                            <form class="form-login" action="/registro" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="name">Nombre</label>
                                    <input type="text" class="form-control" name="nombre"  value="<%= typeof old != 'undefined' ? old.nombre : '' %>">
                                </div>
                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <input type="text" class="form-control" name="email" value="<%= typeof old != 'undefined' ? old.email : '' %>" >
                                </div>
                                <div class="form-group">
                                    <label for="telefono">Teléfono</label>
                                    <input type="number" class="form-control" name="telefono" value="<%= typeof old != 'undefined' ? old.telefono : '' %>" >
                                </div>
                                <div class="form-group">
                                    <label for="password">Contraseña</label>
                                    <input type="password" class="form-control" name="password" >
                                </div>
                                <div class="form-group">
                                    <label for="password">Confirmar contraseña</label>
                                    <input type="password" class="form-control" name="confirmpassword" >
                                </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="imagen">
                                    <label class="custom-file-label" for="">Eligir la imagen...</label>
                                </div>

                                <div class="form-group">
                                    <label class="checkbox-inline"><input type="checkbox" > Acepto
                                        los <a href="#">Términos y condiciones</a> y las <a href="#">Políticas de
                                            Privacidad</a></label>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-secondary botonlogin">Crear cuenta</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

        </section>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
        <!--LIBRERIAS-->
        <script src="bootstrap/js/jquery-3.5.1.js"></script>
        <script src="bootstrap/js/popper.min.js"></script>
        <script src="bootstrap/js/bootstrap.min.js">
        </script>
</body>

</html>