<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <br>
        <h3 class="contactovinculo main-titulo">Administrar Usuarios</h3>
        <br>

        <button type="button" class="btn btn-secondary justify-content-end botonlogin "><a class="agregar-prod"
                href="/registro">Agregar
                Usuario <i class="fas fa-plus-circle"></i></a></button><br><br>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Tel√©fono</th>
                        <th scope="col">Ver</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Borrar</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i= 5; i<10; i++){ %>
                    <tr>
                        <th scope="row"><%=usuarios[i].id%></th>
                        <td><%=usuarios[i].nombre%></td>
                        <td><%=usuarios[i].apellido%></td>
                        <td><%=usuarios[i].email%></td>
                        <td><%=usuarios[i].telefono%></td>
                        <td><a href="/user/detail/<%=usuarios[i].id%>"><i class="far fa-eye"></i></a></td>
                        <td><a href="/user/edit/<%=usuarios[i].id%>"><i class="fas fa-pencil-alt"></i></a></td>
                        <td><a href="/user/delete/<%=usuarios[i].id%>"><i class="fas fa-trash"></i></a></td>
                    </tr>
                    <%} %>
                </tbody>
            </table>
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="/usuarios" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/usuarios">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/usuarios/page/2">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/usuarios/page/3">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="/usuarios/page/3" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
        <!--LIBRERIAS-->
        <script src="bootstrap/js/jquery-3.5.1.js"></script>
        <script src="bootstrap/js/popper.min.js"></script>
        <script src="bootstrap/js/bootstrap.min.js">
        </script>
</body>

</html>