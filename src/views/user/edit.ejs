<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center main-titulo">Editar Usuario</h1>
                </div>
            </article>
        </section>

        <section class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-6 mx-auto bg-light ">
                        <div class="signup-form">
                            <form action="/user/edit/ <%=userEdit.id%> ?_method=PUT" method="POST"
                                enctype="multipart/form-data">

                                <div class="form-group">
                                    <label for="name">Nombre</label>
                                    <input type="text" class="form-control" name="name"  value="<%=userEdit.name%>">
                                    <% if(typeof errors != 'undefined' && errors.name){%>
                                        <span class="text-danger" > <%= errors.name.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="name">Apellido</label>
                                    <input type="text" class="form-control" name="lastname" value="<%= userEdit.lastName%>">
                                    <% if(typeof errors != 'undefined' && errors.lastname){%>
                                        <span class="text-danger" > <%= errors.lastname.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <input type="text" class="form-control" name="email" value="<%=userEdit.email%>" >
                                    <% if(typeof errors != 'undefined' && errors.email){%>
                                        <span class="text-danger" > <%= errors.email.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="telefono">Teléfono</label>
                                    <input type="number" class="form-control" name="phone" value="<%=userEdit.phone%>" >
                                    <% if(typeof errors != 'undefined' && errors.phone){%>
                                        <span class="text-danger" > <%= errors.phone.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="password">Contraseña</label>
                                    <input type="password" class="form-control" name="password">
                                    <input type="hidden" name="password_old" value=<%=userEdit.password%>>
                                    <% if(typeof errors != 'undefined' && errors.password){%>
                                        <span class="text-danger" > <%= errors.password.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="password">Confirmar contraseña</label>
                                    <input type="password" class="form-control" name="confirmpassword">
                                </div>
                                <div class="form-group">
                                    <label for="password">¿Es administrador?</label>
                                    <select name="admin" class="custom-select" id="">
                                        <option value=<%= userEdit.admin%>><%= userEdit.admin%></option>
                                         <option value="0">No</option>
                                         <option value="1">Si</option>
                                         </select>
                                     </div>
                                <div class="form-group">
                                    <label for="">Avatar del usuario</label>
                                    <figure class="form-group">
                                        <img class="w-50 " src="/images/usuarios/<%=  userEdit.image %>" alt="Imagen del usuario" name="imagen">
                                    </figure>
                                      <!--De esta forma logro conservar y que viaje la imagen anterior de esta forma evito que el usuario seleccione una imagen nuevamente, ( si no lo desea) -->
                                      <input type="hidden"  name="oldImagen"  value="<%= userEdit.image%>">
                                      <input type="file"   name="imagen"  placeholder="Eligir la imagen...">
                                   
                                    <% if(typeof errors != 'undefined' && errors.image){%>
                                        <span class="text-danger" > <%= errors.image.msg %></span>
                                      <%}%>
                                </div>
                

                                
                                <div class="custom-file">

                                    <input type="file" class="custom-file-input" name="imagen"
                                        placeholder="Seleccione una imagen">
                                    <label class="custom-file-label" for="">Eligir nuevo avatar...</label>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn btn-primary">Actualizar</button>
                                    <a class="btn btn-danger" href="/usuarios">Volver</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
        <!--LIBRERIAS-->
        <script src="/bootstrap/js/jquery-3.5.1.js"></script>
        <script src="/bootstrap/js/popper.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js">
        </script>
</body>

</html>