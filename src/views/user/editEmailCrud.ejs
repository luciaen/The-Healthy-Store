<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <section class="row">
            <article class="col-12  card pt-5">
                <div class="card-body">
                    <h1 class="card-title text-center main-titulo">Cambiar E-mail</h1>
                </div>
            </article>
        </section>

        <section class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-6 mx-auto bg-light ">
                        <div class="signup-form">
                            <div class="errores">
                                <ul>




                                </ul>
                            </div>
                            <form id="formEditEmail" action="/user/editEmailCrud/<%=editEmailCrud.id%> ?_method=PUT"
                                method="POST">
                                
                                <div class="form-group">
                                    <label for="Email">Ingrese su nuevo correo</label>
                                    <input type="email" class="form-control" name="email">
                                        <% if(typeof errors != 'undefined' && errors.email){%>
                            <span class="text-danger"> <%= errors.email.msg %></span>
                            <%}%>
                            <span id="errorEmail"></span>
                                </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn btn-primary">Continuar</button>
                            <a class="btn btn-danger" href="/perfil">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
                                    <!--LIBRERIAS-->
                                    <script src="/bootstrap/js/jquery-3.5.1.js"></script>
                                    <script src="/bootstrap/js/popper.min.js"></script>
                                    <script src="/bootstrap/js/bootstrap.min.js"></script>
                                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
                                    <script src="/js/validationFrontUser.js"></script>
</body>

</html>