<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <section class="row">
            <article class="col-12  ">
                <div class="card-body">
                    <h1 class="card-title text-center main-titulo">Agregar Usuario</h1>

                </div>
            </article>
        </section>
        <section class="bg-home pt-6">
            <div class="container">
                <div class="row">
                    <div class="col-8 mx-auto ">
                        <div>
                            <ul class="errores">

                            </ul>
                        </div>
                        <div class="signup-form">
                            <form class="form-createUser m-0" action="/usuarios/create" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="name">Nombre</label>
                                    <input type="text" class="form-control" name="nombre"  value="<%= typeof old != 'undefined' ? old.nombre : '' %>">
                                    <% if(typeof errors != 'undefined' && errors.nombre){%>
                                        <span class="text-danger" > <%= errors.nombre.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="name">Apellido</label>
                                    <input type="text" class="form-control" name="lastname" value="<%= typeof old != 'undefined' ? old.lastname : '' %>">
                                    <% if(typeof errors != 'undefined' && errors.lastname){%>
                                        <span class="text-danger" > <%= errors.lastname.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <input type="text" class="form-control" name="email" value="<%= typeof old != 'undefined' ? old.email : '' %>" >
                                    <% if(typeof errors != 'undefined' && errors.email){%>
                                        <span class="text-danger" > <%= errors.email.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="telefono">Teléfono</label>
                                    <input type="number" class="form-control" name="telefono" value="<%= typeof old != 'undefined' ? old.telefono : '' %>" >
                                    <% if(typeof errors != 'undefined' && errors.telefono){%>
                                        <span class="text-danger" > <%= errors.telefono.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="password">Contraseña</label>
                                    <input type="password" class="form-control" name="password" >
                                    <% if(typeof errors != 'undefined' && errors.password){%>
                                        <span class="text-danger" > <%= errors.password.msg %></span>
                                      <%}%>
                                </div>
                                <div class="form-group">
                                    <label for="password">Confirmar contraseña</label>
                                    <input type="password" class="form-control" name="confirmpassword" >
                                </div>
                                <div class="form-group">
                                    <select name="admin" class="custom-select" id="">
                                         <option selected disabled value="">¿Es administrador?</option>
                                         <option value="0">No</option>
                                         <option value="1">Si</option>
                                         </select>
                                     </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="imagen">
                                    <% if(typeof errors != 'undefined' && errors.imagen){%>
                                        <span class="text-danger" > <%= errors.imagen.msg %></span>
                                      <%}%>
                                    <label class="custom-file-label" for="">Eligir la imagen...</label>
                                </div>
                                <!--<div class="form-group ml-4">
                                    <input type="checkbox" class="form-check-input" name="admin"
                                        placeholder="">
                                    <label class="form-check-label" for="exampleCheck1">Es administrador</label>
                                </div>-->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-secondary botonlogin">Crear cuenta</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

        </section>
        <!-------------Comienza el footer---------------------->
        <%- include('../partials/footer') %>
        <!--LIBRERIAS-->
        <script src="/bootstrap/js/jquery-3.5.1.js"></script>
        <script src="/bootstrap/js/popper.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
        <script src="/js/validationFrontUser.js"></script>
        <script src="/js/security.js"></script>
</body>

</html>