<!DOCTYPE html>
<html lang="es">

<%- include('../partials/header') %>

<body>
    <div class="container">


        <!---------Comienza el nav--------------------->
        <%- include('../partials/navbar') %>
        <!---------Comienza el main------------------------>
        <div class="container">
            <h1 class="my-4 main-titulo "><%= productoDetalle.nombre %></h1>
            <div class="row">
                <div class="col-md-8">
                    <img class="img-fluid" src="/images/productos/<%= productoDetalle.imagen%>" alt="Foto del producto">
                </div>

                <div class="col-md-4">
                    <h3 class="my-3 main-titulo">Descripci√≥n</h3>
                    <p><%= productoDetalle.descripcion %></p>
                    <h3 class="my-3 main-titulo">Stock</h3>
                    <p>Stock disponible: <%= productoDetalle.stock%></p>
                    <h4 class="main-titulo">Precio: $<%= productoDetalle.precio %></h4>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button" id="button-addon1">Cantidad</button>
                        </div>
                        <input type="number" class="form-control max__width" placeholder="Cantidad"
                            aria-label="Example text with button addon" aria-describedby="button-addon3">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button type="button" class="btn btn-primary"><a href="/carrito"><i
                                        class="fas fa-cart-plus"></i> Comprar
                                </a></button>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.row -->

            <!-- Related Projects Row -->
            <h3 class="my-4 main-titulo">Productos Similares</h3>

            <div class="row">

                <div class="col-md-3 col-sm-6 mb-4">
