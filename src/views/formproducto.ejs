<!DOCTYPE html>
<html lang="es">

<%- include('./partials/header') %>
<body>
    <div class="container">


<!---------Comienza el nav--------------------->
<%- include('./partials/navbar') %>
        <!---------Comienza el main------------------------>


        <h1 class="h3login main-titulo">Agregar Producto</h1>


        <section class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div>
                        <div class="signup-form">
                            <form action="/admin/create" method="POST">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Nombre del producto</label>
                                    <input type="text" class="form-control" name="nombre" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Categoría</label><br>
                                    <select name="Categoría" class="form-control" id="">
                                        <option value="0">-</option>
                                        <option value="1">Leches</option>
                                        <option value="2">Aceites</option>
                                        <option value="3">Endulzantes</option>
                                        <option value="4">Harinas</option>
                                        <option value="5">Pastas y Arroz</option>
                                        <option value="6">Postres y Snacks</option>
                                        <option value="7">Frutos Secos</option>
                                        <option value="8">Granolas</option>
                                        <option value="9">Viandas</option>>
                                        <option value="9">Bebidas</option>>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Cantidad de unidades</label>
                                    <input type="number" class="form-control" name="Cantidad" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Precio</label>
                                    <input type="text" class="form-control" name="precio" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Descripción</label>
                                    <input type="text" class="form-control" name="descripcion" required="required">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-secondary">Guardar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        
        <!-------------Comienza el footer---------------------->
        <%- include('./partials/footer') %>
        <!--LIBRERIAS-->
        <script src="bootstrap/js/jquery-3.5.1.js"></script>
        <script src="bootstrap/js/popper.min.js"></script>
        <script src="bootstrap/js/bootstrap.min.js">
        </script>
        </body>

        </html>